{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">

            <div id="welcome">
                <h1>{{ 'calculate.title'|trans }}</h1>
            </div>

            {% for troop in troops %}
                {% include '@App/templates/shortInfoTroop.html.twig' %}
            {% endfor %}

            <div class="col-md-12 pull-left">
                <p>{{ 'calculate.average_elixir'|trans({points: efficiency.elixir})|raw }}</p>
                <p>{{ 'calculate.efficiency.by_cost'|trans }}</p>
                {% include '@App/templates/efficiency.html.twig' with {efficiency: efficiency} %}
            </div>

        </div>
    </div>
{% endblock %}
